---
import type { Project } from "../utils/Proyects";
const { project } = Astro.props as {project:Project};
const {title,description,github,image,tags}=project;

const tagColors: Record<string, string> = {
    Python: 'bg-yellow-200 text-yellow-800',
    'Jupyter Notebook': 'bg-orange-200 text-orange-800',
    Kotlin: 'bg-purple-200 text-purple-800',
    HTML: 'bg-red-200 text-red-800',
    CSS: 'bg-blue-200 text-blue-800',
    JavaScript: 'bg-yellow-300 text-yellow-900',
    TypeScript: 'bg-blue-100 text-blue-900',
    'Tailwind CSS': 'bg-sky-500 text-sky-950',
    Astro: 'bg-pink-200 text-pink-800',
    ElasticSearch: 'bg-amber-300 text-amber-900'
};

---

    <div class="w-[720px]  mx-auto px-2 lg:w-[740px] py-4 flex">
        <div class="w-1/2">
            <img src={image} alt=`Captura de pantalla de ${title}` class="w-[300px] h-[250px] rounded-3xl flex transition duration-300
            hover:scale-110 hover:border-2 hover:border-white">
        </div>
        <div class="w-1/2">
            <h3 class="text-lg font-bold text-white">{title}</h3>
        <p class="text-sm text-gray-100/90">{description}</p>
        <ul class="mt-2 flex flex-wrap gap-2 mb-4">
            {tags.map(tag => (
            <li class={`px-3 py-1 inline-block rounded-3xl text-sm font-medium ${tagColors[tag] ?? ''}`}>
                {tag}
            </li>
            ))}
        </ul>
        <a href={github} target="_blank" rel="noopener noreferrer" class="inline-flex  mt-5 ml-4 text-sm font-semibold border px-5 py-2.5 rounded-xl  text-gray-300 text-pretty bg-gray-800 border-gray-500 transition duration-300 ease-in-out hover:bg-gray-600 hover:scale-110 ">Ver GitHub</a>
        </div>
        
        
    </div>
    
