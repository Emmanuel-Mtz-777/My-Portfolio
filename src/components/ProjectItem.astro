---
import type { Project } from "../utils/Proyects";
import AstroIcon from "./icons/stack/AstroIcon.astro";
import CssIcon from "./icons/stack/CssIcon.astro";
import HtmlIcon from "./icons/stack/HtmlIcon.astro";
import JavaScriptIcon from "./icons/stack/JavaScriptIcon.astro";
import JupyterIcon from "./icons/stack/JupyterIcon.astro";
import PythonIcon from "./icons/stack/PythonIcon.astro";
import TailwindIcon from "./icons/stack/TailwindIcon.astro";
import TypeScriptIcon from "./icons/stack/TypeScriptIcon.astro";
import DockerIcon from "./icons/stack/DockerIcon.astro";
import KotlinIcon from "./icons/stack/KotlinIcon.astro"
import ElasticSearchIcon from "./icons/stack/ElasticSearchIcon.astro"

const { project } = Astro.props as {project:Project};
const {title,description,github,image,tags}=project;

const tagColors: Record<string, string> = {
    Python: 'bg-yellow-200 text-yellow-800',
    'Jupyter Notebook': 'bg-orange-200 text-orange-800',
    Kotlin: 'bg-purple-200 text-purple-800',
    HTML: 'bg-red-200 text-red-800',
    CSS: 'bg-blue-200 text-blue-800',
    JavaScript: 'bg-yellow-300 text-yellow-900',
    TypeScript: 'bg-blue-400 text-blue-950',
    'Tailwind CSS': 'bg-sky-300 text-sky-950',
    Astro: 'bg-pink-200 text-pink-800',
    ElasticSearch: 'bg-amber-300 text-amber-900',
    Docker: 'bg-cyan-800 text-white',
};

const tagIcon: Record<string, any>={
    Python:PythonIcon,
    'Jupyter Notebook': JupyterIcon,
    Kotlin:KotlinIcon,
    HTML:HtmlIcon,
    CSS:CssIcon,
    JavaScript:JavaScriptIcon,
    TypeScript:TypeScriptIcon,
    'Tailwind CSS':TailwindIcon,
    Astro:AstroIcon,
    ElasticSearch: ElasticSearchIcon,
    Docker:DockerIcon

}
---
    <div class="w-[720px]  mx-auto px-4 lg:w-[740px] py-4 flex justify-center mt-4 rounded-3xl">
        <div class="w-1/2 flex  items-center">
            <img src={image} alt=`Captura de pantalla de ${title}` class="w-[300px] h-[300px]  object-cover rounded-3xl flex transition duration-300
            hover:scale-105 hover:border-2 hover:border-white">
        </div>
        <div class="w-1/2">
            <h3 class="text-2xl font-bold text-white">{title}</h3>
        <p class="text-sm text-white">{description}</p>
        <ul class="mt-2 flex flex-wrap gap-2 mb-4">
            {tags.map(tag => {
                const Icon = tagIcon[tag];
                return (
                <li class={`flex items-center gap-1 px-3 py-1 rounded-3xl text-sm font-medium ${tagColors[tag] ?? ''}`}>
                    {tag}
                    {Icon && <Icon class="size-5" />}
                </li>
                );
            })}
            </ul>
        <a href={github} target="_blank" rel="noopener noreferrer" class="inline-flex ml-4 text-sm font-semibold border px-5 py-2.5 rounded-xl  text-gray-300 text-pretty bg-gray-800 border-gray-500 transition duration-300 ease-in-out hover:bg-white hover:text-black hover:scale-110 ">Ver repositorio</a>
        </div>
    </div>
    
