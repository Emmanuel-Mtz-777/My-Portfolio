---
import CodeIcon from "./icons/codeIcon.astro"
import type { Project } from "../utils/Proyects";
import { MyProjects } from "../utils/Proyects";
import ProjectItem from "../components/ProjectItem.astro";
---

<h2 class="relative flex items-center text-2xl font-bold gap-2 text-white 
           after:absolute after:left-0 after:bottom-0 after:h-[2px] after:w-0 
           after:bg-white after:transition-all after:duration-300 
           hover:after:w-[200px]">
  <CodeIcon /> Mis Proyectos
</h2>


<ul class="relative  w-[720px] border-gray-200 dark:border-gray-700">
    {MyProjects.map(project => (
        <li>
        <ProjectItem project={project} />
        </li>
    ))}
</ul>