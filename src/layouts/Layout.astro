---
import Header from "../components/Header.astro"
import '@fontsource/ubuntu';

interface Props{
	title:string
}

const {title}=Astro.props as Props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="absolute inset-0 -z-10 h-full w-full items-center flex flex-col [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]">
		</div>

		<Header />
			<slot />
	</body>
</html>

<style>
	html, body {
		margin:  0 auto;
		padding: 0;
		display: flex;
		flex-direction: column;
		align-items: center;
		min-height: 100vh;
		font-family: 'ubuntu', sans-serif;
	}

	:root{
		color-scheme: light dark;
	}
</style>
